FROM rust:1-bookworm

RUN apt-get update && apt-get install -y --no-install-recommends \
    mingw-w64 \
    pkg-config \
    ca-certificates \
  && rm -rf /var/lib/apt/lists/*

RUN rustup target add x86_64-pc-windows-gnu

WORKDIR /work
